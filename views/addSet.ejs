<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Collection</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body tabindex="-1" data-new-gr-c-s-check-loaded="14.1139.0" data-gr-ext-installed="">
    <%- include('partials/navbar', {page: '/lego/addSet' }) %>


        <div class="dropdown">
            <label tabindex="0" class="btn btn-ghost sm:hidden">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7">
                    </path>
                </svg>
            </label>
            <ul tabindex="0"
                class="menu menu-sm dropdown-content right-0 mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                <li><a class="" href="/lego/sets">View Collection</a></li>
                <li><a class="active" href="/lego/addSet">Add to Collection</a></li>
                <li><a class="" href="/about">About</a></li>
            </ul>
        </div>

        <div class="container mx-auto p-4">

            <div class="hero bg-base-200 rounded-lg p-6">
                <div class="hero-content text-center ">
                    <div class="max-w-md">
                        <h1 class="text-5xl font-bold">Add Set</h1>

                        <p class="py-6">Use the below form to add a new Lego Set to the collection</p>

                    </div>
                </div>
            </div>

            <br>

            <form action="/lego/addSet" method="post">

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 gap-y-0">
                    <div>
                        <div class="mb-6">
                            <label for="name" class="block text-gray-700 font-medium">Name</label>
                            <input type="text" id="name" name="name" required=""
                                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                        </div>
                        <div class="mb-6">
                            <label for="year" class="block text-gray-700 font-medium">Year</label>
                            <input type="number" id="year" name="year" required=""
                                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                        </div>
                    </div>
                    <div>

                        <div class="mb-6">
                            <label for="num_parts" class="block text-gray-700 font-medium">Number of Parts</label>
                            <input type="number" id="num_parts" name="num_parts" required=""
                                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                        </div>
                        <div class="mb-6">
                            <label for="img_url" class="block text-gray-700 font-medium">Image URL</label>
                            <input type="url" id="img_url" name="img_url" required=""
                                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                        </div>
                    </div>

                    <div>
                        <div class="mb-6">
                            <label for="theme_id" class="block text-gray-700 font-medium">Theme</label>
                            <select id="theme_id" name="theme_id" required=""
                                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                                <% themes.forEach(theme=>{ %>
                                    <option value="<%= theme.id %>">
                                        <%= theme.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <div class="mb-6">
                            <label for="set_num" class="block text-gray-700 font-medium">Set Num</label>
                            <input type="text" id="set_num" name="set_num" required=""
                                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                        </div>

                    </div>
                </div>

                <div class="mt-6">
                    <button type="submit" class="btn btn-primary w-full ">Add Set</button>
                </div>

            </form>
        </div>
        <div id="highlighter--hover-tools" style="display: none;">
            <div id="highlighter--hover-tools--container">
                <div class="highlighter--icon highlighter--icon-copy" title="Copy"></div>
                <div class="highlighter--icon highlighter--icon-change-color" title="Change Color"></div>
                <div class="highlighter--icon highlighter--icon-delete" title="Delete"></div>
            </div>
        </div>
</body>

</html>